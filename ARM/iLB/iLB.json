{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Location for all resources."
        }
      },
      "loadBalancerName": {
        "type": "string",
        "defaultValue": "defaultILB",
        "metadata": {
          "description": "Name for the load balancer."
        }
      },
      "virtualNetworkName": {
        "type": "string",
        "defaultValue": "defaultVNet",
        "metadata": {
          "description": "Name of the target virtual network."
        }
      },
      "subnetName": {
        "type": "string",
        "defaultValue": "defaultSubnet",
        "metadata": {
          "description": "Name of the target subnet."
        }
      }
    },
    "variables": {
      "location": "[parameters('location')]",
      "loadBalancerName": "[parameters('loadBalancerName')]",
      "virtualNetworkName": "[parameters('virtualNetworkName')]",
      "subnetName": "[parameters('subnetName')]"
    },
    "resources": [
    {
      "apiVersion": "2015-06-15",
      "name": "[variables('loadBalancerName')]",
      "type": "Microsoft.Network/loadBalancers",
      "location": "[variables('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
      ],
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "loadBalancerFrontEnd",
            "properties": {
              "subnet": {
                "id": "[variables('subnetName')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "loadBalancerBackEnd"
          }
        ],
        "loadBalancingRules": [
          {
            "properties": {
              "frontendIPConfiguration": {
                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('loadBalancerName')), '/frontendIpConfigurations/loadBalancerFrontEnd')]"
              },
              "backendAddressPool": {
                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('loadBalancerName')), '/backendAddressPools/loadBalancerBackEnd')]"
              },
              "probe": {
                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('loadBalancerName')), '/probes/lbprobe')]"
              },
              "protocol": "Tcp",
              "frontendPort": 443,
              "backendPort": 443,
              "idleTimeoutInMinutes": 15
            },
            "name": "lbrule"
          }
        ],
        "probes": [
          {
            "properties": {
              "protocol": "Tcp",
              "port": 443,
              "intervalInSeconds": 10,
              "numberOfProbes": 3
            },
            "name": "lbprobe"
          }
        ]
      }
    }
    ],
    "outputs": {
    }
  }